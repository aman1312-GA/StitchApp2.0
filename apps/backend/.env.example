# Server Configuration
NODE_ENV=development
PORT=4000
HOST=localhost

#Database Configuration
MONGODB_URI=mongodb://localhost:27017/stitchapp

#JWT configuration
JWT_ACCESS_SECRET=
JWT_REFRESH_SECERT=
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=30d
JWT_ISSSUER=stitchapp
JWT_AUDIENCE=stitchappuser

#Client Configuration
CLIENT_URL=exp://192.168.1.100:19000
ALLOWED_ORIGINS=http://localhost:3000,exp://192.168.1.100:19000,http://localhost:19006

#Security Configuration
BCRYPT_SALT_ROUNDS=12
PASSWORD_MIN_LENGTH=6
PASSWORD_MAX_LENGTH=128
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000
RESET_TIME=3600000

#Session Configuration
MAX_REFRESH_TOKENS=5
ALLOW_MULTIPLE_SESSIONS=true

# Email Configuration (Optional - for future features)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=Your App <noreply@yourapp.com>

#Feature Flags
REQUIRE_EMAIL_VERIFICATION=false
ENABLE_GRAPHQL_PLAYGROUND=true

#Logging configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log